{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Output configuration
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": false,

    // Module resolution for workspace dependencies
    "paths": {
      "@open-dashboard/shared": ["../../shared/index.ts"],
      "@open-dashboard/shared/*": ["../../shared/*"]
    },

    // Build info for incremental compilation
    "tsBuildInfoFile": "./dist/.tsbuildinfo",

    // Type checking
    "types": ["node"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ],
  "references": [{ "path": "../../shared" }]
}

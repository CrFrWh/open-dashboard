  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": false,

    // Build info
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
